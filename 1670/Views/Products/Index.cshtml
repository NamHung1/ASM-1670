@model IEnumerable<_1670.Models.Product>

@{
    ViewData["Title"] = "Admin Index";
    var properties = new List<string> { "Name", "Image", "Description", "Price", "Rating", "Category" };
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-bordered text-center">
    <thead class="text-dark fw-bold">
        <tr>
            @foreach (var product in properties)
            {
                <td>
                    @product
                </td>
            }
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name </td>
                <td>
                    <img src="~/images/@product.Image" alt="Image" width="50px" />
                </td>
                <td>@product.Description</td>
                <td>@product.Price$</td>
                <td>@product.Rating</td>
                <td>@product.CategoryId</td>

                <td>
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@product.Id"
                       onclick="return confirm('Are you sure to delete this order?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>