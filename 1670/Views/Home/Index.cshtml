@model IEnumerable<_1670.Models.Product>

@{
	ViewData["Title"] = "Home Page";
}

<h1>Book Store</h1>

<style>
	.product-image img {
	/*	display:flex;
		align-content:center;
		justify-content: center;*/


		width: 100%;
		height: 400px;
		object-fit: cover;
	}

</style>

@if (User.IsInRole("Admin"))
{
	<div class="text-center">
		<div class="row">
			@foreach (var product in Model)
			{
				<div class="col-md-3">
					<div class="card mb-4 box-shadow">
						<div class="product-image">
							<img class="card-img-top" src="~/images/@product.Image" alt="Product Image">
						</div>
						<div class="card-body">
							<h3>@product.Name</h3>
							<p>@product.Description</p>
							<p>@product.Price$</p>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
}
else if (User.IsInRole("User"))
{
	<div class="text-center">
		<div class="row">
			@foreach (var product in Model)
			{
				<div class="col-md-4">
					<div class="card mb-4 box-shadow">
						<div class="product-image">
							<img class="card-img-top" src="~/images/@product.Image" alt="Product Image">
						</div>
						<div class="card-body">
							<h3>@product.Name</h3>
							<p>@product.Description</p>
							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group">
									<a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="addProduct btn btn-sm btn-outline-secondary">Add to Cart</a>
								</div>
								<small class="text-muted">@product.Price$</small>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
}

